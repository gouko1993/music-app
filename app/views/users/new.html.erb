<% provide(:title, "新規作成") %>
<div class="signup">
  <h1>アカウント作成</h1>
  <div class="sign-up-form">
    <%= form_for(@user) do |f| %>
        <%= f.label :name, "名前" %>
        <%= f.text_field :name %>
  
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email %>
  
        <%= f.label :password, "パスワード(6~20文字)" %>
        <%= f.password_field :password %>
  
        <%= f.label :password_confirmation, "パスワード確認" %>
        <%= f.password_field :password_confirmation %>
  
        <%= f.submit "アカウント作成", class: "btn" %>
    <% end %>
  </div>
</div>

